{
  "name": "acall",
  "version": "0.1.0",
  "description": "Utility function for asynchronous error handling",
  "keywords": [
    "async",
    "utility",
    "error"
  ],
  "author": "Ted Kesgar <t.kesgar@live.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tkesgar/acall.git"
  },
  "bugs": {
    "url": "https://github.com/tkesgar/acall/issues"
  },
  "homepage": "https://github.com/tkesgar/acall#readme",
  "scripts": {
    "lint": "xo",
    "format": "prettier --write '**/*.{js,ts,md}'",
    "test": "jest",
    "watch": "microbundle watch",
    "build": "microbundle build",
    "np": "np"
  },
  "main": "dist/acall.js",
  "umd:main": "dist/acall.umd.js",
  "module": "dist/acall.mjs",
  "source": "src/acall.js",
  "types": "acall.d.ts",
  "files": [
    "dist/",
    "acall.d.ts"
  ],
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/runtime": "^7.9.2",
    "babel-jest": "^25.2.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "lint-staged": "^10.1.1",
    "np": "^6.2.0",
    "prettier": "^2.0.2",
    "xo": "^0.28.2"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "xo": {
    "space": 2,
    "extends": [
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/__tests__/**"
        ],
        "env": "jest"
      }
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "proseWrap": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "xo --fix",
      "prettier --write",
      "git add"
    ],
    "*.{md}": [
      "prettier --write",
      "git add"
    ]
  }
}
